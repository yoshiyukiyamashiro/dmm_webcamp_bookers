<body>
  <h1>Editing Book</h1>
  <% if @book.errors.any? %>
  <div id="error_explanation">
   <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
   <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
   </ul>
  <% end %>
  </div>
  <%= form_with model:@book,local: true do |f| %>
  <div class="field">
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title, class: 'book_title' %>
  </div>
  <div class="field">
    <%= f.label :body, 'Body' %>
    <%= f.text_area :body, class: 'book_body' %>
  </div>
  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
  <% end %>
  <%= link_to 'Show', book_path(@book), class: (@book.id) %>
   |
  <%= link_to 'Back', books_path, class: 'back' %>
</body>